---
import Layout from '../../layouts/Layout.astro';
import Navigation from '../../components/Navigation.astro';
import Footer from '../../components/Footer.astro';
import { ArrowLeft } from 'lucide-astro';
---

<Layout title="Safety Clearance Database for Magnet Lab - GreenFlux Portfolio">
  <Navigation />

  <main class="pt-32 pb-32 px-6 sm:px-8 lg:px-12 min-h-screen">
    <div class="max-w-4xl mx-auto">
      <div class="mb-8">
        <a href="/" class="text-green-primary hover:text-green-bright transition-colors inline-flex items-center gap-2">
          <ArrowLeft class="w-5 h-5" />
          Back to Portfolio
        </a>
      </div>

      <h1 class="text-4xl md:text-5xl font-bold mb-6 text-text-primary">
        Safety Clearance Database for Magnet Lab
      </h1>

      <div class="bg-darker border border-gray-800 rounded p-8 mb-8">
        <p class="text-xl text-text-secondary leading-relaxed">
          Maintenance tracker for high-energy systems in a national laboratory, built in FileMaker Pro.
          Outstanding review from National Science Foundation.
        </p>
      </div>

      <div class="bg-darker border border-gray-800 rounded p-8">
        <h2 class="text-2xl font-bold mb-4 text-text-primary">Technologies</h2>
        <div class="flex flex-wrap gap-3">
          <span class="px-4 py-2 bg-gray-800 text-green-primary rounded-full border border-green-primary/30">Database</span>
          <span class="px-4 py-2 bg-gray-800 text-green-primary rounded-full border border-green-primary/30">FileMaker Pro</span>
        </div>
      </div>

      <div class="mt-8 bg-darker border border-gray-800 rounded p-8">
        <p class="text-text-secondary text-center italic">
          Project details coming soon.
        </p>
      </div>
    </div>
  </main>

  <Footer />
</Layout>
