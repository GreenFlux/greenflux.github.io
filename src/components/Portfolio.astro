---
import portfolioData from '../data/portfolio.json';
---

<section id="portfolio" class="py-32 px-6 sm:px-8 lg:px-12">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-4xl font-bold text-center mb-12 text-text-primary">Portfolio</h2>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
      {portfolioData.items.map((item) => (
        <a
          href={item.path}
          target={item.path.startsWith('http') ? '_blank' : '_self'}
          rel={item.path.startsWith('http') ? 'noopener noreferrer' : undefined}
          class="group block"
        >
          <div class="bg-darker border border-gray-800 rounded overflow-hidden hover:shadow-lg hover:shadow-green-primary/20 transition-all duration-300 h-full flex flex-col">
            <div class="h-48 flex items-center justify-center p-4" style="background-color: #181918;">
              <img
                src={item.image}
                alt={item.title}
                loading="lazy"
                class="max-h-full max-w-full object-contain"
              />
            </div>

            <div class="p-8 flex-1 flex flex-col">
              <h3 class="text-xl font-bold mb-3 text-text-primary group-hover:text-green-primary transition-colors">
                {item.title}
              </h3>
              <p class="text-text-secondary mb-4 flex-1">
                {item.description}
              </p>
              <div class="flex flex-wrap gap-2">
                {item.tags.map((tag) => (
                  <span class="px-3 py-1 text-green-primary text-sm rounded-full border border-green-primary/30" style="background-color: #181918;">
                    {tag}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </a>
      ))}
    </div>
  </div>
</section>
