---
import siteData from '../data/site.json';
const { about } = siteData;
---

<section id="about" class="py-32 px-6 sm:px-8 lg:px-12 bg-gray-900/30">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-4xl font-bold text-center mb-4 text-text-primary">{about.heading}</h2>
    <p class="text-center text-xl text-text-secondary mb-12">{about.subtitle}</p>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div class="space-y-6">
        {about.paragraphs.slice(0, 2).map((paragraph) => (
          <p class="text-text-secondary leading-relaxed">{paragraph}</p>
        ))}

        <hr class="border-green-primary/30 my-6" />

        {about.paragraphs.slice(2).map((paragraph) => (
          <p class="text-text-secondary leading-relaxed">{paragraph}</p>
        ))}

        <div class="pt-6">
          <a
            href={about.upworkUrl}
            target="_blank"
            rel="noopener noreferrer"
            class="inline-block px-8 py-3 bg-green-primary hover:bg-green-bright text-darker font-bold rounded transition-all duration-300 hover:shadow-lg hover:shadow-green-primary/50 no-underline"
          >
            UPWORK
          </a>
        </div>
      </div>

      <div class="flex justify-center">
        <img
          src={about.image}
          alt="Joseph Petty - Full-Stack Developer and Founder of GreenFlux, LLC"
          loading="lazy"
          class="rounded shadow-lg max-w-full h-auto"
        />
      </div>
    </div>
  </div>
</section>
