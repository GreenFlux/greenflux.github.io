---
import siteData from '../data/site.json';
import { Linkedin, Youtube } from 'lucide-astro';
const { social } = siteData;
---

<section id="social" class="py-32 px-6 sm:px-8 lg:px-12 social-content">
  <div class="max-w-7xl mx-auto">
    <h2 class="text-4xl font-bold text-center mb-12 text-text-primary">{social.heading}</h2>

    <div class="flex justify-center gap-8 mb-16">
      {social.links.map((link) => (
        <a
          href={link.url}
          target="_blank"
          rel="noopener noreferrer"
          class="text-gray-600 hover:text-green-primary transition-all duration-300 hover:scale-125 no-underline"
          title={link.name}
        >
          {link.icon === 'twitter-x' ? (
            <svg class="w-16 h-16" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path d="M18.244 2.25h3.308l-7.227 8.26 8.502 11.24H16.17l-5.214-6.817L4.99 21.75H1.68l7.73-8.835L1.254 2.25H8.08l4.713 6.231zm-1.161 17.52h1.833L7.084 4.126H5.117z"/>
            </svg>
          ) : link.icon === 'reddit' ? (
            <svg class="w-16 h-16" viewBox="0 0 24 24" fill="currentColor" xmlns="http://www.w3.org/2000/svg">
              <path d="M12 0A12 12 0 0 0 0 12a12 12 0 0 0 12 12 12 12 0 0 0 12-12A12 12 0 0 0 12 0zm5.01 4.744c.688 0 1.25.561 1.25 1.249a1.25 1.25 0 0 1-2.498.056l-2.597-.547-.8 3.747c1.824.07 3.48.632 4.674 1.488.308-.309.73-.491 1.207-.491.968 0 1.754.786 1.754 1.754 0 .716-.435 1.333-1.01 1.614a3.111 3.111 0 0 1 .042.52c0 2.694-3.13 4.87-7.004 4.87-3.874 0-7.004-2.176-7.004-4.87 0-.183.015-.366.043-.534A1.748 1.748 0 0 1 4.028 12c0-.968.786-1.754 1.754-1.754.463 0 .898.196 1.207.49 1.207-.883 2.878-1.43 4.744-1.487l.885-4.182a.342.342 0 0 1 .14-.197.35.35 0 0 1 .238-.042l2.906.617a1.214 1.214 0 0 1 1.108-.701zM9.25 12C8.561 12 8 12.562 8 13.25c0 .687.561 1.248 1.25 1.248.687 0 1.248-.561 1.248-1.249 0-.688-.561-1.249-1.249-1.249zm5.5 0c-.687 0-1.248.561-1.248 1.25 0 .687.561 1.248 1.249 1.248.688 0 1.249-.561 1.249-1.249 0-.687-.562-1.249-1.25-1.249zm-5.466 3.99a.327.327 0 0 0-.231.094.33.33 0 0 0 0 .463c.842.842 2.484.913 2.961.913.477 0 2.105-.056 2.961-.913a.361.361 0 0 0 .029-.463.33.33 0 0 0-.464 0c-.547.533-1.684.73-2.512.73-.828 0-1.979-.196-2.512-.73a.326.326 0 0 0-.232-.095z"/>
            </svg>
          ) : link.icon === 'linkedin' ? (
            <Linkedin class="w-16 h-16" />
          ) : link.icon === 'youtube' ? (
            <Youtube class="w-16 h-16" />
          ) : null}
        </a>
      ))}
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-12 items-center">
      <div class="flex justify-center">
        <img
          src={social.image}
          alt="GreenFlux social media and community presence"
          loading="lazy"
          class="rounded max-w-full h-auto"
        />
      </div>

      <div class="rounded p-8">
        <h3 class="text-2xl font-bold mb-6 text-text-primary">Blog & Forums</h3>
        <ul class="space-y-4 list-disc list-inside">
          {social.resources.map((resource) => (
            <li class="text-green-primary">
              <a
                href={resource.url}
                target="_blank"
                rel="noopener noreferrer"
                class="text-green-primary hover:text-green-bright transition-colors text-lg"
              >
                {resource.title}
              </a>
            </li>
          ))}
        </ul>
      </div>
    </div>
  </div>
</section>
