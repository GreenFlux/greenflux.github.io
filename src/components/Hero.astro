---
import siteData from '../data/site.json';
---

<section id="home" class="relative h-screen flex items-center justify-center" style="background: url('/images/banner.png') no-repeat center center; background-size: cover;">
  <div class="max-w-7xl mx-auto px-6 sm:px-8 lg:px-12 text-center">
    <div class="bg-gradient-to-r from-transparent via-black/70 to-transparent py-16 px-12">
      <h1 class="text-5xl md:text-6xl font-bold mb-4 text-text-primary tracking-wider">
        GREENFLUX PORTFOLIO
      </h1>
      <p class="text-xl md:text-2xl mb-2 text-text-primary italic">{siteData.tagline}</p>
      <p class="text-lg md:text-xl text-text-primary">
        Founder @ <strong>{siteData.company}</strong>
      </p>
      <p class="text-lg md:text-xl text-text-primary">
        {siteData.position}
      </p>
    </div>
  </div>
</section>
